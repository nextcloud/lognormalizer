{
  "name": "nextcloud/lognormalizer",
  "type": "library",
  "description": "Parses variables and converts them to string so that they can be logged",
  "keywords": [
    "log",
    "normalizer"
  ],
  "homepage": "https://github.com/interfasys/lognormalizer",
  "license": "AGPL-3.0",
  "authors": [
    {
      "name": "Christoph Wurst",
      "email": "christoph@winzerhof-wurst.at"
    },
    {
      "name": "Olivier Paroz",
      "email": "dev-lognormalizer@interfasys.ch",
      "role": "Developer",
      "homepage": "http://www.interfasys.ch"
    },
    {
      "name": "Jordi Boggiano",
      "email": "j.boggiano@seld.be",
      "role": "Developer"
    }
  ],
  "require": {
    "ext-json": "*",
    "php": ">=7.3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "nextcloud/coding-standard": "^1.4",
    "vimeo/psalm": "^6.13"
  },
  "autoload": {
    "psr-4": {
      "Nextcloud\\LogNormalizer\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml",
    "lint": "find . -name \\*.php -not -path './vendor/*' -not -path './vendor-bin/*' -print0 | xargs -0 -n1 php -l",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "psalm": "psalm",
    "psalm:update-baseline": "psalm --threads=1 --update-baseline --set-baseline=tests/psalm-baseline.xml"
  }
}
